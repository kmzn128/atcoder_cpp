{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "tasks": [
        {
          "type": "shell",
          "label": "g++ build active file",
          "group": {
            "kind": "build",
            "isDefault": true
          },
          "command": "/usr/bin/g++",
          "args": [
            "-g",
            "-O0",
            "-std=c++14",
            "${file}"
          ],
          "problemMatcher": [
            "$gcc"
          ]
        }
      ],
      "version": "2.0.0"
}